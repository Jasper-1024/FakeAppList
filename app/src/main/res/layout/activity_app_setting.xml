<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="appsetting"
            type="com.jasperhale.myprivacy.Activity.item.AppSetting" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.jasperhale.myprivacy.Activity.View.AppSettingActivity">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/appsetting_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:id="@+id/appsetting_applist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/appsetting">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/AppSetting_AppLIst"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/appsetting" />

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@={appsetting.installedApp}"
                    android:padding="8dp"
                    android:text="禁止获取已安装应用"
                    android:textSize="16sp" />

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@={appsetting.runningApp}"
                    android:padding="8dp"
                    android:text="禁止获取正在运行服务"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:animateLayoutChanges="true"
                app:layout_constraintTop_toBottomOf="@+id/appsetting_applist">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/AppSetting_Location"
                    android:textSize="16sp" />

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@={appsetting.connectionWifi}"
                    android:padding="8dp"
                    android:text="禁止获取已连接Wifi信息"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:visibility="@{appsetting.connectionWifi == true? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/appsetting_SSID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SSID"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/appsetting_SSID_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@={appsetting.SSID}"
                            android:inputType="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/appsetting_Mac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MAC"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/appsetting_Mac_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@={appsetting.mac}"
                            android:inputType="" />

                    </LinearLayout>

                </LinearLayout>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@={appsetting.cellInfo}"
                    android:padding="8dp"
                    android:text="禁止获取基站信息"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:visibility="@{appsetting.cellInfo == true? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/appsetting_Mcc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mcc"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/appsetting_Mcc_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@={appsetting.smcc}"
                            android:inputType="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/appsetting_Mnc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mnc"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/appsetting_Mnc_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@={appsetting.smnc}"
                            android:inputType="" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/appsetting_Cid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cid"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/appsetting_Cid_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@={appsetting.scid}"
                            android:inputType="" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/appsetting_Lac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lac"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/appsetting_Lac_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@={appsetting.slac}"
                            android:inputType="" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</layout>